{% extends "SdzMainBundle::layout.html.twig" %}

{% block title %} {{ parent() }} - Compte admin {% endblock %}

{% block body %}
<h3>Compte admin</h3>
<div id="menu">
	<ul>
		<li><a href="{{ path('admin') }}">Utilisateurs</a></li> |
		<li>Produits</li> |
		<li><a href="{{ path('admin_categories') }}">Cat√©gories</a></li> |
		<li><a href="{{ path('admin_commandes') }}">Commandes</a></li>
	</ul>
</div>
<div id="side">	
	<h3>Produit</h3>
	<a href="{{ path('admin_produit_nouveau') }}">Nouveau</a>
</div>

<div id="main">
	<h3>Liste de produits</h3>
	<table border>

		<tr><td width="80">Produit</td><td align="left" width="500">Description</td><td width="50">Prix</td><td></td><td></td></tr>

		{% for produit in produits %}

			<tr>

				<td><img src="{{ asset('') }}{{produit.image}}" width="80"></td>

				<td valign="top" width="500">{{ produit.nom }}<br/>{{ produit.description }}</td>

				<td valign="top">{{ produit.prix }}</td>

				<td valign="top"><a href="{{ path('admin_produit_modifier', {'id': produit.id}) }}">Modifier</td>
				
				<td valign="top"><a href="{{ path('admin_produit_supprimer', {'id': produit.id}) }}">Supprimer</td>

			</tr>
		{% endfor %}
	</table>
</div>
{% endblock %}
